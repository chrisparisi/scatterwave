<div class="container-fluid px-3">
  <div class="row min-vh-100">
    <div class="col-md-8 col-lg-6 col-xl-5 d-flex align-items-center">
      <div class="w-100 py-5 px-md-5 px-xl-6 position-relative">
        <div class="mb-5">
          <%= image_tag "favicon.png", style:"max-width: 4rem;",  class:"img-fluid mb-3" %>
          <h2>Sign up</h2>
        </div>
        <hr/>
        <!--<form class="form-validate">-->
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= render 'shared/devisemes' %>
              <div class="form-group">
                <label class="form-label"> Full Name</label>
                <%= f.text_field :fullname, autofocus: true, placeholder: "Full Name", class: "form-control" %>
              </div>
              <div class="form-group">
                <label class="form-label"> Email Address</label>
                <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "form-control" %>
              </div>
              <div class="form-group">
                <label class="form-label"> Password</label>
                <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "form-control" %>
              </div>
              <div class="actions">
                <%= f.submit "Sign up", class: "btn btn-lg btn-block btn-primary" %>
              </div>
          <% end %>
          <hr data-content="OR" class="my-3 hr-text letter-spacing-2">
          <%= link_to  user_facebook_omniauth_authorize_path, class: "btn btn btn-outline-primary btn-block btn-social mb-3" do%>
              <i class="fa-2x fa-facebook-f fab btn-social-icon"> </i>Connect
              <span class="d-none d-sm-inline">with Facebook</span>
          <%end%>
        <%= link_to  user_google_oauth2_omniauth_authorize_path, class: "btn btn btn-outline-primary btn-block btn-social mb-3" do%>

          <!--<button class="btn btn btn-outline-muted btn-block btn-social mb-3">-->
            <i class="fa-2x fa-google fab btn-social-icon"> </i>Connect
            <span class="d-none d-sm-inline">with Google</span><% end %>
          <hr class="my-4">
          <p class="text-center">
            <small class="text-muted text-center">Already have an account yet? <a href="<%= new_user_session_path %>">Sign In </a></small>
          </p>
        <!--</form>-->
        <a href="/" class="close-absolute mr-md-5 mr-xl-6 pt-5">
          <i class="fa-3x fa fa-times" aria-hidden="true"></i>
        </a>
      </div>
    </div>
    <div class="col-md-4 col-lg-6 col-xl-7 d-none d-md-block">
      <!-- Image-->
      <div style="background-image: url( <%=asset_url('banner.jpg')%>);" class="bg-cover h-100 mr-n3"></div>
    </div>
  </div>
</div>

