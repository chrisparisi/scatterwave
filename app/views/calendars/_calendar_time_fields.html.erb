<div class="row nested_attributes">
  <div class="form-group col-lg-5 col-md-5 col-sm-5 col-xs-12">
    <label class="control-label">Start Time</label>
    <%= f.text_field :start_time, class: "form-control time-fields", value: f.object.start_time&.strftime("%I:%M %p"), required: true %>
  </div>

  <div class="form-group col-lg-5 col-md-5 col-sm-5 col-xs-12">
    <label class="control-label">End Time</label>
    <%= f.text_field :end_time, class: "form-control time-fields", value: f.object.end_time&.strftime("%I:%M %p"), required: true %>
  </div>

  <div class="remove-link col-lg-2 col-md-2 col-sm-2 col-xs-12">
    <%= link_to_remove_association '<i class="fa fa-minus-circle"></i> Remove'.html_safe, f, class: "remove pull-right",  wrapper_class: 'nested_attributes' %>
  </div>
</div>