<div style="height: 8px;" class="progress rounded-0 sticky-top">
  <div role="progressbar" style="width:66.66%" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100" class="progress-bar"></div>
</div>
<section class="py-5">
  <div class="container">
    <p class="subtitle text-primary">Add new band</p>
    <h1 class="h2 mb-5"> Photos <span class="text-muted float-right">Step 4</span></h1>
    <div class="row form-block">
      <div class="col-lg-4">
        <h4>Photos</h4>
      </div>
      <div class="col-lg-7 ml-auto">
        <div class="form-group">
          <%= form_for @band, url: band_pictures_path(@band), method: 'post', html: {multipart: true}, class: "form" do |f| %>

              <div class="row">
                <div class="col-sm-12 form-group">
                    <span class="btn btn-default btn-file text-babu dropzone dz-clickable">
                      <i class="fa fa-cloud-upload" aria-hidden="true"></i> Select Photos
                      <%= file_field_tag "images[]", type: :file, multiple: true, required: true %>
                    </span>
                </div>
              </div>
              <%= f.submit "Add Photos", class: "btn btn-primary float-right" %>
          <% end %>
          <div id="pictures" data-pic-upload="<%= @pictures.count %>"><%= render 'pictures/pictures_list' %></div>
        </div>

      </div>
    </div>

    <div class="row form-block flex-column flex-sm-row">
      <div class="col text-center text-sm-left">
        <%= link_to description_band_path, class: "btn btn-link text-muted" do %>
            <i class="fa-chevron-left fa mr-2"></i>Back
        <% end %>
      </div>
      <div class="col text-center text-sm-right">
        <%= link_to band_music_upload_band_path, class: "next btn btn-primary px-3" do %>Next
            step<i class="fa-chevron-right fa ml-2"></i>
        <% end %>
      </div>
    </div>
  </div>
</section>
<script>
    $('.next').click(function () {

        var name = $('#images_').val();

        if (name.length < 1 && ($("#pictures").attr('data-pic-upload') == "0")) {
            alert('Select some image.');
            return false;
        }
        else {
            return true;
        }

    });
</script>