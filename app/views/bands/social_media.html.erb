<div style="height: 8px;" class="progress rounded-0 sticky-top">
  <div role="progressbar" style="width: 33.32%" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100" class="progress-bar"></div>
</div>
<section class="py-5">
  <div class="container">
    <p class="subtitle text-primary">Add new Band</p>
    <h1 class="h2 mb-5"> Social Media <span class="text-muted float-right">Step 2</span></h1>

    <%= form_for @band do |f| %>
        <div class="row form-block">
          <div class="col-lg-4">
            <h4>Social Media Info</h4>
          </div>
          <div class="col-lg-7 ml-auto">

            <div class="form-group"></div>
            <div class="form-group">
              <label for="form_name" class="form-label">Link to band's Facebook</label>
              <%= f.text_field :face_link, placeholder: "Facebook Link", class: "form-control", required: true %>
            </div>
            <div class="form-group">
              <label for="form_name" class="form-label">Link to band's SoundCloud</label>
              <%= f.text_field :sound_link, placeholder: "SoundCloud Link", class: "form-control", required: true %>
            </div>
            <div class="form-group">
              <label for="form_name" class="form-label">Link to band's Spotify</label>
              <%= f.text_field :spot_link, placeholder: "Spotify Link", class: "form-control", required: true %>
            </div>

          </div>
        </div>

        <div class="row form-block flex-column flex-sm-row">
          <div class="col text-center text-sm-left">
            <%= link_to listing_band_path, class: "btn btn-link text-muted" do %>
                <i class="fa-chevron-left fa mr-2"></i>Back
            <% end %>
          </div>
          <div class="col text-center text-sm-right">
            <button class="btn btn-primary px-3" type="submit">Next step<i class="fa-chevron-right fa ml-2"></i>
            </button>
          </div>
        </div>
    <% end %>
  </div>
</section>