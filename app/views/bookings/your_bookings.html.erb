<section class="py-5 bg-light">
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <ul class="sidebar-list">
          <li class="sidebar-item"><%= link_to "Your Venues", venues_path, class: "sidebar-link" %></li>
          <li class="sidebar-item"><%= link_to "Your Venue's Shows", your_bookings_path, class: "sidebar-link active" %></li>
        </ul>
      </div>
      <div class="col-md-9">
        <div class="card">
          <div class="card-header pt-4 pb-3 px-0 mx-4">
            <h2 class="h6 mb-0">
              Your Venue's Shows
            </h2>
          </div>
          <div class="card-body m-3">
            <div id="booking-list">
              <%= render 'venues', bookings: @bookings %>
            </div>
            <div id="all-infinite-scrolling" style="display:none">
              <%= will_paginate @bookings %>
            </div>
            <div id="loading" class="d-none">
              Loading...
            </div>
            <hr/>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<style>
  .badge {
    font-size: 100%;
  }
</style>