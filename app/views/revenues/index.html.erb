<section class="py-5 bg-light">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="card-header pt-4 pb-3 px-0 mx-4">
            <h2 class="h6 mb-0">
              This Week's Revenue
            </h2>
          </div>
          <div class="card-body">
            <div class="container text-center">
              <% if @bookings.blank? %>
                  <h3>You don't have any bookings</h3><br/>
                  <%= link_to "Start a band and book some gigs!", new_band_path, class: "btn btn-primary" %>
              <% else %>
                  <%= column_chart @this_week_revenue, colors: ["#FFA90F"] %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
