<div style="height: 8px;" class="progress rounded-0 sticky-top">
  <div role="progressbar" style="width: 40%" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100" class="progress-bar"></div>
</div>
<section class="py-5">
  <div class="container">
    <p class="subtitle text-primary">Add new Venue</p>
    <h1 class="h2 mb-5"> Payout <span class="text-muted float-right">Step 2</span></h1>
    <%= form_for @venue do |f| %>
        <div class="row form-block">
          <div class="col-lg-4">
            <h4>Payout</h4>
            <p class="text-muted text-sm"> What is the flat payout fee your venue will give to the band at
            the end of the show?</p>
          </div>
          <div class="col-lg-7 ml-auto">

            <label for="form_name" class="form-label">Payout</label>
            <%= f.text_field :payout, placeholder: "eg: $200", class: "form-control", required: true %>
          </div>
        </div>
        <div class="row form-block flex-column flex-sm-row">
          <div class="col text-center text-sm-left">
            <%= link_to listing_venue_path, class: "btn btn-link text-muted" do %>
                <i class="fa-chevron-left fa mr-2"></i>Back
            <% end %>
          </div>
          <div class="col text-center text-sm-right">
            <button class="btn btn-primary px-3" type="submit">Next step<i class="fa-chevron-right fa ml-2"></i>
            </button>
          </div>
        </div>
    <% end %>
  </div>
</section>