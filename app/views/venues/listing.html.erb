<div style="height: 8px;" class="progress rounded-0 sticky-top">
  <div role="progressbar" style="width: 20%" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100" class="progress-bar"></div>
</div>
<section class="py-5">
  <div class="container">
    <p class="subtitle text-primary">Add new Venue</p>
    <h1 class="h2 mb-5"> Basic information <span class="text-muted float-right">Step 1</span></h1>

    <%= form_for @venue do |f| %>
        <div class="row form-block">
          <div class="col-lg-4">
            <h4>Venue Info</h4>
          </div>
          <div class="col-lg-7 ml-auto">

            <div class="form-group"></div>
            <div class="form-group">
              <div class="dropdown bootstrap-select form-control">
                <label for="form_type" class="form-label">Venue Type</label>
                <%= f.select :venue_type, [["Bar", "Bar"], ["Club", "Club"], ["Coffee House", "Coffee House"], ["Concert Hall", "Concert Hall"], ["Festival", "Festival"], ["Stadium", "Stadium"], ["University", "University"]], {}, {:class => "selectpicker form-control",
                                                                                                                                                                                                                                       id: "venue_type", prompt: "Select...", required: true} %>
              </div>
            </div>
            <div class="form-group">
              <div class="dropdown bootstrap-select form-control">
                <label for="form_type" class="form-label">Gig Type</label>
                <%= f.select :gig_type, [["Live", "Live"], ["Competition", "Competition"], ["Licensing", "Licensing"]],
                             {}, {:class => "selectpicker form-control",
                                  id: "gig_type", prompt: "Select...", required: true} %>
              </div>
            </div>
            <div class="form-group">
              <div class="dropdown bootstrap-select form-control">
                <label for="form_type" class="form-label">Booking Type</label>
                <%= f.select :instant, Venue.instants.map {|key, value| [key.humanize, key]}, {}, {:class => "selectpicker form-control", selected: 'Request', prompt: "Select...", required: true} %>
              </div>
            </div>
            <div class="form-group">
              <div class="dropdown bootstrap-select form-control">
                <label for="form_type" class="form-label">Capacity</label>
                <%= f.select :capacity, [["50", 50], ["100", 100], ["150", 150], ["200", 200], ["500+", 500]], {}, {:class => "selectpicker form-control",
                                                                                                                    id: "capacity", prompt: "Select...", required: true } %>
              </div>
            </div>
          </div>
        </div>

        <div class="row form-block flex-column flex-sm-row">
          <div class="col text-center text-sm-left">
          </div>
          <div class="col text-center text-sm-right">
            <button class="btn btn-primary px-3" type="submit">Next step<i class="fa-chevron-right fa ml-2"></i>
            </button>
          </div>
        </div>
    <% end %>
  </div>
</section>