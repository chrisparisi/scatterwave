<section class="py-5">
  <div class="container">
    <p class="subtitle text-primary">Add new Venue</p>
    <h1 class="h2 mb-5"> Location <span class="text-muted float-right">Step 6</span></h1>

    <%= form_for @venue do |f| %>
        <div class="row form-block">
          <div class="col-lg-4">
            <h4>Address</h4>
            <p class="text-muted text-sm">His room, a proper human room although a little too small, lay peacefully
              between its four familiar walls. A collection of textile samples lay spread out on the table.</p>
          </div>
          <div class="col-lg-7 ml-auto">

            <div class="form-group"></div>
            <div class="form-group">
              <label for="form_name" class="form-label">Address</label>
              <%= f.text_field :address, placeholder: "What is your address?", class: "form-control", required: true, id: "venueaddress" %>
            </div>

          </div>
        </div>

        <div class="row form-block flex-column flex-sm-row">
          <div class="col text-center text-sm-left">
            <%= link_to genre_venue_path, class: "btn btn-link text-muted" do %>
                <i class="fa-chevron-left fa mr-2"></i>Back
            <% end %>
          </div>
          <div class="col text-center text-sm-right">
            <% is_ready = !@venue.payout.blank? && !@venue.listing_name.blank? && !@venue.photos.blank? %>

            <%= form_for @venue do |f| %>
                <%= f.hidden_field :active, value: true %>
                <%= f.submit "Publish", id: "publish_button", class: "btn btn-primary px-3", disabled: !is_ready %>
            <% end %>
          </div>
        </div>
    <% end %>
  </div>
</section>


<script>
    $(function () {
        $("#venueaddress").geocomplete();
    })
</script>
