<ul class="sidebar-list">
  <li class="sidebar-item">
    <%= link_to "Listing", listing_venue_path, class: "sidebar-link active" %>
    <span class="pull-right text-babu"><i class="fa fa-check"></i></span>
  </li>
  <li class="sidebar-item">
    <%= link_to "Payout", payout_venue_path, class: "sidebar-link active" %>
    <% if !@venue.payout.blank? %>
    <span class="pull-right text-babu"><i class="fa fa-check"></i></span>
    <% end %>
  </li>
  <li class="sidebar-item">
    <%= link_to "Description", description_venue_path, class: "sidebar-link active" %>
    <% if !@venue.listing_name.blank? %>
    <span class="pull-right text-babu"><i class="fa fa-check"></i></span>
    <% end %>
  </li>
  <li class="sidebar-item">
    <%= link_to "Photos", photo_upload_venue_path, class: "sidebar-link active" %>
    <% if !@venue.photos.blank? %>
    <span id="photo_check" class="pull-right text-babu"><i class="fa fa-check"></i></span>
    <% end %>
  </li>
  <li class="sidebar-item">
    <%= link_to "Genre", genre_venue_path, class: "sidebar-link active" %>
    <span class="pull-right text-babu"><i class="fa fa-check"></i></span>
  </li>
  <li class="sidebar-item">
    <%= link_to "Location", location_venue_path, class: "sidebar-link active" %>
    <% if !@venue.address.blank? %>
    <span class="pull-right text-babu"><i class="fa fa-check"></i></span>
    <% end %>
  </li>
</ul>
<hr/>

<% is_ready = !@venue.active && !@venue.payout.blank? && !@venue.listing_name.blank? && !@venue.photos.blank? && !@venue.address.blank? %>

<%= form_for @venue do |f| %>
  <%= f.hidden_field :active, value: true %>
  <%= f.submit "Publish", id: "publish_button", class: "btn btn-primary btn-block", disabled: !is_ready %>
<% end %>
